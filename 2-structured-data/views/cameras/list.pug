extends ../base.pug

block content
  h3 Cameras

  a(href="/cameras/add", class='btn btn-success btn-sm')
    i.glyphicon.glyphicon-plus
    span  Add camera

  each camera in cameras
    .media
      a(href=`/cameras/${camera.id}`)
        .media-left
            img(src=camera.imageUrl || "http://placekitten.com/g/128/192")
        .media-body
          h4= camera.name
          p= camera.price

  if !cameras.length
    p No cameras found.

  if nextPageToken
    nav
      ul.pager
        li
          a(href=`?pageToken=${encodeURIComponent(nextPageToken)}`) More
